public class Main {
    public static void main(String[] args) {
        // Criando um Cliente
        Cliente cliente = new Cliente("João Silva", 123456789, "Rua das Flores, 123", "(41) 99999-9999");

        // Criando um Veiculo associado ao Cliente
        Veiculo veiculo = new Veiculo("ABC-1234", "Toyota Corolla", cliente);

        // Criando um Funcionario
        Funcionario funcionario = new Funcionario("Maria Oliveira", 987654321, 101);

        // Imprimindo informações do Cliente
        System.out.println("Informações do Cliente:");
        System.out.println("Nome: " + cliente.getNome());
        System.out.println("CPF: " + cliente.getCpf());
        System.out.println("Endereço: " + cliente.endereco);
        System.out.println("Telefone: " + cliente.telefone);

        // Imprimindo informações do Veículo
        System.out.println("\nInformações do Veículo:");
        System.out.println("Placa: " + veiculo.placa);
        System.out.println("Modelo: " + veiculo.modelo);
        System.out.println("Proprietário: " + veiculo.proprietario.getNome());

        // Imprimindo informações do Funcionário
        System.out.println("\nInformações do Funcionário:");
        System.out.println("Nome: " + funcionario.getNome());
        System.out.println("CPF: " + funcionario.getCpf());
        System.out.println("Código RH: " + funcionario.cod_rh);
    }
}
